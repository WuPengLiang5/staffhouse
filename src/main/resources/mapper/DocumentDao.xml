<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.staffhouse.dao.DocumentDao" >
    <resultMap id="BaseResultMap" type="com.example.staffhouse.entity.Document">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="filename" property="filename" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="create_date" property="createDate" jdbcType="VARCHAR"/>
        <result column="path" property="path" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="saveDocument" parameterType="com.example.staffhouse.entity.Document">
        insert into document_inf (user_id,title,filename,remark,create_date,path)
        values(#{userId},#{title},#{filename},#{remark},#{createDate},#{path})
    </insert>
    <select id="getDocumentsByPage" resultType="com.example.staffhouse.entity.Document">
        select * from document_inf
        <if test="page!=null and size!=null">
            limit #{page},8
        </if>
    </select>
    <select id="getAllDocumentsNumber" resultType="INTEGER">
        select count(*) from document_inf
    </select>
    <select id="getDocumentsNumberByCreateDate" resultType="INTEGER">
        select count(*) from document_inf where create_date = #{createDate}
    </select>

    <select id="getDocumentPath" resultType="String">
        select path from document_inf where id = #{id}
    </select>
    <select id="getDocumentById" resultType="com.example.staffhouse.entity.Document">
        select * from document_inf where id = #{id}
    </select>
    <select id="getDocumentsByCreateDate" resultType="com.example.staffhouse.entity.Document">
        select * from document_inf where create_date = #{createDate,jdbcType=VARCHAR}
            limit #{page,jdbcType=INTEGER},8
    </select>
    <select id="getDocumentsByIdAndCreateDate" resultType="com.example.staffhouse.entity.Document">
        select * from document_inf where create_date = #{createDate} and id = #{id}
            limit #{page},8
    </select>
</mapper>