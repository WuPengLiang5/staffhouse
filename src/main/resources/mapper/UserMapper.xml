<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.staffhouse.dao.UserDao" >
    <resultMap id="BaseResultMap" type="com.example.staffhouse.entity.UserInfo" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="loginname" property="loginName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="create_date" property="createDate" jdbcType="VARCHAR" />
        <result column="username" property="userName" jdbcType="VARCHAR" />
        <result column="faceurl" property="faceUrl" jdbcType="VARCHAR" />
        <result column="facepath" property="facePath" jdbcType="VARCHAR" />
    </resultMap>
    <update id="updateUserPassword" parameterType="com.example.staffhouse.entity.UserInfo">
        update user_inf set password=#{password} where id=#{id}
    </update>

    <select id="listUserInfo" resultType="com.example.staffhouse.entity.UserInfo">
        select * from user_inf order by id ASC
    </select>

    <select resultType="com.example.staffhouse.entity.UserInfo" id="getUserInfoByLoginName">
        select * from user_inf where loginname = #{loginName} ORDER BY id DESC
    </select>

    <select id="listUserInfoByUserStatus" resultType="com.example.staffhouse.entity.UserInfo">
        select * from user_inf where status = #{status} order by id ASC
    </select>

    <select id="getUserInfoByUserName" resultType="com.example.staffhouse.entity.UserInfo">
        select * from user_inf where username = #{userName} ORDER BY id ASC
    </select>
    <select id="getUserInfoById" resultType="com.example.staffhouse.entity.UserInfo">
        select * from user_inf where id = #{userId}
    </select>
</mapper>